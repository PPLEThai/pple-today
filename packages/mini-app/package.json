{
  "name": "@pplethai/pple-today-miniapp-sdk",
  "version": "0.1.3",
  "description": "PPLE Today Mini App SDK",
  "types": "./build/index.d.ts",
  "files": [
    "build"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PPLEThai/pple-today.git",
    "directory": "packages/mini-app"
  },
  "exports": {
    ".": {
      "require": "./build/cjs.js",
      "import": "./build/esm.js",
      "default": "./build/esm.js",
      "types": "./build/index.d.ts"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "rimraf ./build && tsx build.ts && dts-bundle-generator -o build/index.d.ts src/index.ts",
    "codegen": "pnpm build",
    "typecheck": "pnpm build && tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "format:check": "prettier --check .",
    "coverage": "open-cli coverage/index.html"
  },
  "license": "MIT",
  "devDependencies": {
    "@pple-today/project-config": "workspace:^",
    "dts-bundle-generator": "^9.5.1",
    "esbuild": "^0.25.5",
    "open-cli": "^8.0.0",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.3",
    "typescript": "5.8.2"
  },
  "dependencies": {
    "oidc-client-ts": "^3.3.0",
    "zod": "^4.0.5"
  }
}
