model MiniApp {
  id    String  @id @default(cuid())
  slug  String  @unique
  name  String
  icon  String? // Base64 encoded image
  order Int     @default(0)

  clientId  String
  clientUrl String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  banners Banner[]

  miniAppRoles MiniAppRole[]
}

model MiniAppRole {
  role String

  miniAppId String
  miniApp   MiniApp @relation(fields: [miniAppId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([role, miniAppId])
}
