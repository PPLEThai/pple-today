enum FeedItemType {
  POST
  POLL
  ANNOUNCEMENT
}

enum FeedItemReactionType {
  UP_VOTE
  DOWN_VOTE
}

model FeedItem {
  id   String       @id @default(cuid())
  type FeedItemType

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  publishedAt DateTime?

  numberOfComments Int @default(0)

  authorId String
  author   User   @relation(fields: [authorId], references: [id])

  post         Post?
  poll         Poll?
  announcement Announcement?

  reactions      FeedItemReaction[]
  comments       FeedItemComment[]
  reactionCounts FeedItemReactionCount[]
  feedItemScores FeedItemScore[]
}

model FeedItemScore {
  userId     String
  feedItemId String
  score      Float  @default(0)

  expiresAt DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user     User     @relation(fields: [userId], references: [id])
  feedItem FeedItem @relation(fields: [feedItemId], references: [id])

  @@id([userId, feedItemId])
  @@index([feedItemId])
  @@index([userId])
}

model FeedItemReaction {
  userId     String
  feedItemId String

  type FeedItemReactionType

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user     User     @relation(fields: [userId], references: [id])
  feedItem FeedItem @relation(fields: [feedItemId], references: [id])

  @@id([userId, feedItemId])
  @@index([feedItemId])
  @@index([userId])
}

model FeedItemReactionCount {
  feedItemId String
  type       FeedItemReactionType

  count Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  feedItem FeedItem @relation(fields: [feedItemId], references: [id])

  @@id([feedItemId, type])
}

model FeedItemComment {
  id         String @id @default(cuid())
  userId     String
  feedItemId String

  content String

  isPrivate Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user     User     @relation(fields: [userId], references: [id])
  feedItem FeedItem @relation(fields: [feedItemId], references: [id])

  @@index([feedItemId])
  @@index([userId])
}
