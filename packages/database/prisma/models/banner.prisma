enum BannerStatusType {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum BannerNavigationType {
  IN_APP_NAVIGATION
  EXTERNAL_BROWSER
  MINI_APP
}

model Banner {
  id            String @id @default(cuid())
  imageFilePath String

  headline    String
  status      BannerStatusType     @default(DRAFT)
  navigation  BannerNavigationType
  destination String
  order       String               @unique // Lexorank

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([navigation])
}
