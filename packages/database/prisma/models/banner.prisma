enum BannerStatusType {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum BannerNavigationType {
  IN_APP_NAVIGATION
  EXTERNAL_BROWSER
  MINI_APP
}

enum BannerInAppType {
  POST
  POLL
  TOPIC
  USER
  ANNOUNCEMENT
  ELECTION
  HASHTAG
}

model Banner {
  id            String @id @default(cuid())
  imageFilePath String

  headline   String               @default("")
  status     BannerStatusType     @default(DRAFT)
  navigation BannerNavigationType

  inAppType BannerInAppType?
  inAppId   String?

  destination String?
  order       String  @unique // Lexorank

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  miniApp   MiniApp? @relation(fields: [miniAppId], references: [id])
  miniAppId String?

  @@index([status])
  @@index([navigation])
}
