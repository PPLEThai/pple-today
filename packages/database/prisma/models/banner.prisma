enum BannerStatusType {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum BannerNavigationType {
  IN_APP_NAVIGATION
  EXTERNAL_BROWSER
  MINI_APP
}

model Banner {
  id            String @id @default(cuid())
  imageFilePath String

  status      BannerStatusType     @default(DRAFT)
  navigation  BannerNavigationType
  destination String?
  order       Int                  @unique @default(0)

  startAt DateTime
  endAt   DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  miniApp   MiniApp? @relation(fields: [miniAppId], references: [id])
  miniAppId String?  @unique

  @@index([status])
  @@index([navigation])
}
