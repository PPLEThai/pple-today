enum CarouselStatusType {
  PUBLISH
  DRAFT
}

enum CarouselNavigationType {
  IN_APP_NAVIGATION
  EXTERNAL_BROWSER
  MINI_APP
}

model Carousel {
  id            String @id @default(cuid())
  imageFilePath String

  status      CarouselStatusType
  navigation  CarouselNavigationType
  destination String
  order       Int                    @unique @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([order])
}
