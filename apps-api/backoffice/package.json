{
  "name": "@api/backoffice",
  "version": "0.1.0",
  "description": "",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "pnpm codegen && tsx build.ts",
    "codegen": "rimraf ./__generated__/prisma && prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset",
    "test": "vitest",
    "test:cov": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "format:check": "prettier --check .",
    "coverage": "open-cli coverage/index.html"
  },
  "dependencies": {
    "@bogeychan/elysia-logger": "^0.1.8",
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/eden": "^1.3.2",
    "@elysiajs/node": "^1.3.0",
    "@elysiajs/swagger": "^1.3.1",
    "@google-cloud/storage": "^7.16.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@prisma/adapter-pg": "^6.11.1",
    "@prisma/client": "6.11.1",
    "@sinclair/typebox": "^0.34.37",
    "dotenv": "^17.0.1",
    "elysia": "^1.3.5",
    "jsonwebtoken": "^9.0.2",
    "neverthrow": "^8.2.0",
    "pino": "^9.7.0",
    "pino-http": "^10.5.0",
    "remeda": "^2.24.0",
    "zod": "^4.0.0"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "splitting": false,
    "clean": true,
    "noExternal": [
      "/(.*)/"
    ]
  },
  "prisma": {
    "schema": "./prisma"
  },
  "devDependencies": {
    "@pple-today/project-config": "workspace:^",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.15.3",
    "@vitest/coverage-v8": "3.2.4",
    "esbuild": "^0.25.5",
    "open-cli": "^8.0.0",
    "pino-pretty": "^13.1.1",
    "prisma": "^6.11.1",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.3",
    "type-fest": "^4.41.0",
    "typescript": "5.8.2",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@9.9.0",
  "engines": {
    "node": ">=22"
  },
  "volta": {
    "node": "22.15.0",
    "pnpm": "9.9.0"
  }
}
