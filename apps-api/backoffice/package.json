{
  "name": "@api/backoffice",
  "type": "module",
  "version": "0.4.0",
  "description": "",
  "exports": {
    "./app": {
      "types": "./src/app.types.ts"
    },
    "./admin": {
      "types": "./src/admin.types.ts"
    }
  },
  "scripts": {
    "dev": "tsx watch --include \"node_modules/@pple-today/api-common/**/src\" --include \"node_modules/@pple-today/database/__generated__\" src/index.ts",
    "build": "rimraf ./build && tsx build.ts",
    "test": "vitest",
    "test:cov": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "format:check": "prettier --check .",
    "coverage": "open-cli coverage/index.html"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/eden": "^1.3.2",
    "@elysiajs/node": "^1.3.0",
    "@elysiajs/swagger": "^1.3.1",
    "@paralleldrive/cuid2": "^2.2.2",
    "@pple-today/api-common": "workspace:^",
    "@pple-today/database": "workspace:^",
    "@prisma/adapter-pg": "^6.15.0",
    "@sinclair/typebox": "^0.34.37",
    "elysia": "^1.3.5",
    "jsonwebtoken": "^9.0.2",
    "neverthrow": "^8.2.0",
    "remeda": "^2.24.0"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "splitting": false,
    "clean": true,
    "noExternal": [
      "/(.*)/"
    ]
  },
  "prisma": {
    "schema": "./prisma"
  },
  "devDependencies": {
    "@pple-today/project-config": "workspace:^",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.15.3",
    "@vitest/coverage-v8": "3.2.4",
    "esbuild": "^0.25.5",
    "esbuild-plugin-copy": "^2.1.1",
    "open-cli": "^8.0.0",
    "pino-pretty": "^13.1.1",
    "prisma": "^6.11.1",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.3",
    "typescript": "5.8.2",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@9.9.0",
  "engines": {
    "node": ">=22"
  },
  "volta": {
    "node": "22.15.0",
    "pnpm": "9.9.0"
  }
}
