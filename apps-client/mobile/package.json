{
  "name": "@client/mobile",
  "main": "expo-router/entry",
  "version": "0.7.1",
  "scripts": {
    "dev": "node --env-file .env ./scripts/update-redirect.js && expo start --dev-client",
    "start": "expo start",
    "reset-project": "node ./scripts/reset-project.js",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "ios:device": "expo run:ios --device",
    "web": "expo start --web",
    "lint": "expo lint",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "open:ios": "xed ios",
    "open:android": "open -a /Applications/Android\\ Studio.app android",
    "prebuild": "expo prebuild",
    "prebuild:android": "expo prebuild --clean --platform android",
    "prebuild:ios": "expo prebuild --clean --platform ios",
    "build:android": "eas build -p android --profile preview --local",
    "fastlane:setup": "bash ./fastlane/setup.sh",
    "fastlane:android": "pnpm prebuild:android && pnpm fastlane:setup && cd android && fastlane beta",
    "fastlane:ios": "pnpm prebuild:ios && pnpm fastlane:setup && cd ios && fastlane beta",
    "fastlane:android:prod": "pnpm prebuild:android && pnpm fastlane:setup && cd android && fastlane production"
  },
